<h1 class="ab-lefty">{{ 'AdBack : The stats of your AdBlock audience' |trans }}</h1>
<hr class="clear">

<div id="ab-full-app">
    <div id="adb-stats"
         data-reviewlink="https://www.drupal.org/project/adback_solution_to_adblock"
         data-supportlink="https://www.adback.co/en/landing/contact">
    </div>
</div>

<script src="https://www.adback.co/built/js/ab.js?2"></script>
<script type="text/javascript">
    window.onload = function () {
        if (typeof adbackjs === 'object') {
            adbackjs.init({
                token: '{{ access_token }}',
                url: 'https://www.adback.co/api/',
                language: '{{ locale }}',
                version: 2
            });
        } else {
            (function ($) {
                $("div[data-ab-graph]").each(function () {
                    $(this).append('{{ 'No data available, please <a href="%s">refresh domain</a>'|trans }}');
                });
            })(jQuery);
        }
    }
</script>
